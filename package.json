{
  "name": "quizat",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:remote": "pnpm build:cloudflare && npx wrangler dev --remote",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "build:cloudflare": "opennextjs-cloudflare build",
    "preview": "opennextjs-cloudflare build && opennextjs-cloudflare preview",
    "deploy": "opennextjs-cloudflare build && opennextjs-cloudflare deploy",
    "deploy:preview": "opennextjs-cloudflare build && npx wrangler deploy --env=preview",
    "deploy:production": "opennextjs-cloudflare build && npx wrangler deploy --env=production",
    "cf-typegen": "wrangler types --env-interface CloudflareEnv cloudflare-env.d.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate:local": "wrangler d1 migrations apply DB --local",
    "db:migrate:prod": "wrangler d1 migrations apply DB --remote",
    "db:drop-all:local": "rm -rf .wrangler/state/v3/d1/*",
    "db:reset:local": "rm -rf .wrangler/state/v3/d1 && pnpm db:migrate:local",
    "db:studio:local": "drizzle-kit studio",
    "db:studio:prod": "drizzle-kit studio",
    "db:create": "wrangler d1 create quizat-eg-db",
    "db:list": "wrangler d1 list",
    "db:execute": "wrangler d1 execute quizat-eg-db",
    "db:console": "wrangler d1 console quizat-eg-db",
    "db:seed:local": "wrangler d1 execute DB --local --file=./src/db/seed-users.sql",
    "db:seed:prod": "wrangler d1 execute DB --remote --file=./src/db/seed-users.sql",
    "db:init:local": "pnpm db:migrate:local && pnpm db:seed:local",
    "db:full-reset:local": "pnpm db:drop-all:local && pnpm db:migrate:local && pnpm db:seed:local"
  },
  "dependencies": {
    "@auth/drizzle-adapter": "^1.11.1",
    "@hono/zod-validator": "^0.7.6",
    "@opennextjs/cloudflare": "^1.15.1",
    "@panva/hkdf": "^1.2.1",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.4",
    "bcryptjs": "^3.0.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.45.1",
    "gpt-tokenizer": "^3.4.0",
    "hono": "^4.11.5",
    "jose": "^6.1.3",
    "lucide-react": "^0.563.0",
    "nanoid": "^5.1.6",
    "next": "16.1.4",
    "next-auth": "4.24.11",
    "next-intl": "^4.7.0",
    "next-themes": "^0.4.6",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "sonner": "^2.0.7",
    "strnum": "^2.1.2",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260124.0",
    "@eslint/eslintrc": "^3.3.3",
    "@tailwindcss/postcss": "^4",
    "@types/bcryptjs": "^3.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9",
    "eslint-config-next": "16.1.4",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5",
    "wrangler": "^4.60.0"
  }
}
